# ============================================================================
# Ops Copilot Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================================================
# LLM API Keys
# ============================================================================

# OpenAI API key (REQUIRED)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API key (OPTIONAL)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ============================================================================
# LLM Model Configuration
# ============================================================================

# Primary LLM model to use
# Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
LLM_MODEL=gpt-4-turbo-preview

# Temperature for LLM responses (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.1

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=2000

# ============================================================================
# LangSmith (Observability)
# ============================================================================

# Enable LangSmith tracing
LANGCHAIN_TRACING_V2=true

# LangSmith project name
LANGCHAIN_PROJECT=ops-copilot

# LangSmith API key (OPTIONAL but recommended)
# Get from: https://smith.langchain.com/
LANGCHAIN_API_KEY=ls__your-langsmith-key-here

# ============================================================================
# Vector Database (Pinecone)
# ============================================================================

# Pinecone API key (REQUIRED)
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here

# Pinecone environment/region
PINECONE_ENVIRONMENT=us-west1-gcp

# Pinecone index name for runbook embeddings
PINECONE_INDEX_NAME=runbooks

# ============================================================================
# Elasticsearch (Logs & Keyword Search)
# ============================================================================

# Elasticsearch cluster URL
ELASTICSEARCH_URL=http://localhost:9200

# Elasticsearch credentials (if auth enabled)
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# ============================================================================
# PostgreSQL (Incident Storage)
# ============================================================================

# PostgreSQL connection details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=opscopilot
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your-postgres-password-here

# ============================================================================
# Redis (Caching)
# ============================================================================

# Redis connection details
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Default TTL for cached items (seconds)
REDIS_TTL=3600

# ============================================================================
# Prometheus (Metrics)
# ============================================================================

# Prometheus server URL
PROMETHEUS_URL=http://localhost:9090

# ============================================================================
# Application Settings
# ============================================================================

# Maximum agent iterations to prevent infinite loops
MAX_ITERATIONS=5

# Maximum request processing time (seconds)
REQUEST_TIMEOUT=30

# OpenAI embedding model
# Options: text-embedding-3-large, text-embedding-3-small, text-embedding-ada-002
EMBEDDING_MODEL=text-embedding-3-large

# Embedding vector dimensions
EMBEDDING_DIMENSIONS=1536

# ============================================================================
# Notes
# ============================================================================

# REQUIRED fields:
# - OPENAI_API_KEY
# - PINECONE_API_KEY
# - POSTGRES_PASSWORD

# OPTIONAL but recommended:
# - LANGCHAIN_API_KEY (for tracing and debugging)
# - ELASTICSEARCH_URL (for log search)
# - PROMETHEUS_URL (for metrics)

# For local development, you can use default values for:
# - PostgreSQL (localhost:5432)
# - Redis (localhost:6379)
# - Elasticsearch (localhost:9200)
# - Prometheus (localhost:9090)

# For production deployment:
# - Use strong passwords
# - Enable authentication on all services
# - Use environment-specific values
# - Store secrets in a secure vault (e.g., AWS Secrets Manager)
